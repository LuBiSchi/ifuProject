<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="com.ifu">

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="16"/>

    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme">
        <!--SplashScreen comeÃ§a aqui-->
        <activity android:label="@string/app_name" android:name="com.ifu.SplashScreen" android:screenOrientation="portrait" android:theme="@android:style/Theme.Black.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/app_name" android:name="com.ifu.MainActivity">
        </activity>
        <!--  Login Activity -->
        <activity android:label="Criar uma nova conta" android:name="com.ifu.LoginActivity"/>

        <!--  Register Activity -->
        <activity android:label="Registrar uma nova conta" android:name="com.ifu.RegisterActivity"/>
    </application>

    <!-- Allow to connect with internet -->
    <uses-permission android:name="android.permission.INTERNET"/>



</manifest>
